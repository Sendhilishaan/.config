alt  - 1 : open -a "Firefox"
alt  - 2 : open -a "Visual Studio Code"
alt  - 3 : open -a "Microsoft OneNote"
alt - 4 : open -a "iTerm"

# Focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Move window
shift + ctrl - h : yabai -m window --swap west
shift + ctrl - j : yabai -m window --swap south
shift + ctrl - k : yabai -m window --swap north
shift + ctrl - l : yabai -m window --swap east

# Resize windows
ctrl + alt - h : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
ctrl + alt - j : yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:50
ctrl + alt - k : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50
ctrl + alt - l : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0

# Toggle window float
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Toggle fullscreen
alt - f : yabai -m window --grid 1:1:0:0:1:1 --toggle padding

# Rotate tree
alt - r : yabai -m space --rotate 90

# Balance windows
alt - e : yabai -m space --balance

# Toggle split orientation (vertical <-> horizontal)
alt - s : yabai -m window --toggle split

# Or rotate the entire space 90 degrees
alt - r : yabai -m space --rotate 90

# Rotate 270 degrees (counter-clockwise)
shift + alt - r : yabai -m space --rotate 270

# Flip horizontally
alt - x : yabai -m space --mirror x-axis

# Flip vertically
alt - y : yabai -m space --mirror y-axis

# Focus spaces (desktops)
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3

# Move window to space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3

# Restart yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Snap to left half
shift + alt - h : yabai -m window --grid 1:2:0:0:1:1
# Snap to right half  
shift + alt - l : yabai -m window --grid 1:2:1:0:1:1

# Move window to top half
shift + alt - up : yabai -m window --grid 2:1:0:0:1:1

# Move window to bottom half
shift + alt - down : yabai -m window --grid 2:1:0:1:1:1
